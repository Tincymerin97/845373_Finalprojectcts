@model KisanMitraFinal.Models.FarmerDetail

@{
    ViewBag.Title = "FarmerLogin";
}

<h2>Farmer Login</h2>
<br />
<style>
    table, th, td
    {
        padding: 20px;
        background-color: none;
    }
 
</style>

<div class="container">
    <body style=" background-image: url('../../Photos/agri10.jpg');
                    background-repeat: no-repeat;
                    background-size: cover;">


        @using (Html.BeginForm("FarmerLogin", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            { <table cellspacing="20" cellpadding="10">
                    <tr>
                        <td> @Html.Label("Username")</td>
                        <td> @Html.TextBox("username", null, new { @class = "form-control" ,required="required" })</td>

                    </tr>


                    <tr>
                        <td> @Html.Label("Password")</td>
                        <td>@Html.Password("password", null, new { @class = "form-control" ,required="required" })</td>

                    </tr>



                </table>}


            <br />

            <br />
            <input type="submit" value="Login" class="btn-success" />

        }


    </body>
</div>